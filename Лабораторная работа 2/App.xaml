<Application x:Class="Лабораторная_работа_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Лабораторная_работа_2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WhiteAndGrayButton">
            <Setter Property="Control.FontFamily" Value="Verdana"/>
            <Setter Property="Control.Background" Value="Gray"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.Margin" Value="10"/>
        </Style>
        <Style x:Key="WhiteAndGrayGroupBox" BasedOn="{StaticResource WhiteAndGrayButton}">
            <Setter Property="Control.BorderThickness" Value="2"/>
            <Setter Property="Control.BorderBrush" Value="DarkSlateGray"/>
            <Setter Property="Control.Foreground" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>
