<Window x:Class="Лабораторная_работа_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Лабораторная_работа_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="670" Width="430" MinHeight="670" MinWidth="430">
    <Window.Resources>
        <BitmapImage x:Key="p3Image" UriSource="Resources/p3.png"/>
        <BitmapImage x:Key="p4Image" UriSource="Resources/p4.png"/>
        <BitmapImage x:Key="p5Image" UriSource="Resources/p5.png"/>
    </Window.Resources>
    <StackPanel>
        <StackPanel.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5">
                <GradientStop Color="LightGray" Offset="0.5" />
                <GradientStop Color="White" Offset="2" />
            </RadialGradientBrush>
        </StackPanel.Background>
        <RadioButton 
            IsChecked="True"
            Margin="5"
            Name="Radio1"
            Checked="RadioButton_Checked">
            <WrapPanel IsEnabled="True" x:Name="PanelP1">
                <Image
                    x:Name="ImageP1"
                    Height="30" />
                <GroupBox
                    Header="Parameters"
                    Style="{DynamicResource GroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label 
                            Content="a"
                            Grid.Column="0"
                            Grid.Row="0"/>
                        <TextBox
                            Text="0,00"
                            Grid.Column="1"
                            Grid.Row="0"
                            MinWidth="70"
                            Name="R1TextA"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                            Content="f"
                            Grid.Column="0"
                            Grid.Row="1"/>
                        <ComboBox
                            Grid.Column="1"
                            Grid.Row="1"
                            SelectedIndex="0"
                            Name="R1ComboF">
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                            <ComboBoxItem>6</ComboBoxItem>
                            <ComboBoxItem>7</ComboBoxItem>
                            <ComboBoxItem>8</ComboBoxItem>
                            <ComboBoxItem>9</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <RadioButton 
            Margin="5"
            Name="Radio2"
            Checked="RadioButton_Checked">
            <StackPanel IsEnabled="False" x:Name="PanelP2">
                <Image
                    x:Name="ImageP2"
                    Height="31" />
                <GroupBox
                    Header="Parameters"
                    Style="{StaticResource WhiteAndGrayGroupBox}">
                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="a"/>
                        <TextBox
                            Text="0,00"
                            MinWidth="70"
                            Name="R2TextA"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                            Content="b"/>
                        <TextBox
                            Text="0,00"
                            MinWidth="70"
                            Name="R2TextB"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                            Content="f"/>
                        <ComboBox
                            MinWidth="100"
                            SelectedIndex="0"
                            Name="R2ComboF">
                            <ComboBoxItem>10</ComboBoxItem>
                            <ComboBoxItem>20</ComboBoxItem>
                            <ComboBoxItem>30</ComboBoxItem>
                            <ComboBoxItem>40</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>

        <RadioButton 
            Margin="5"
            Name="Radio3"
            Checked="RadioButton_Checked">
            <StackPanel IsEnabled="False" x:Name="PanelP3">
                <Image
                    x:Name="ImageP3"
                    Height="30"/>
                <GroupBox
                     Header="Parameters"
                    Style="{DynamicResource GroupBoxStyle}">
                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="a"/>
                        <TextBox
                            Text="0,00"
                            MinWidth="50"
                            Name="R3TextA"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                            Content="b"/>
                        <TextBox
                            Text="0,00"
                            MinWidth="50"
                            Name="R3TextB"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                            Content="c"/>
                        <ComboBox
                            MinWidth="50"
                            SelectedIndex="0"
                            Name = "R3ComboC">
                            <ComboBoxItem
                                Content="0"/>
                            <ComboBoxItem
                                Content="1"/>
                        </ComboBox>
                        <Label
                            Content="d"/>
                        <ComboBox
                            MinWidth="70"
                            SelectedIndex="0"
                            Name="R3ComboD">
                            <ComboBoxItem Content="-1"/>
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>

        <RadioButton 
            Margin="5"
            Name="Radio4"
            Checked="RadioButton_Checked">
            <WrapPanel IsEnabled="False" x:Name="PanelP4">
                <Image
                    x:Name="ImageP4"
                    Height="60"/>
                <GroupBox Header="Parametrs"
                          Style="{DynamicResource GroupBoxStyle}">
                    <WrapPanel>
                        <Label
                    Content="c"
                    VerticalAlignment="Center"/>
                        <ComboBox
                    MinWidth="70"
                    VerticalAlignment="Center"
                    Name="R4ComboC"
                    SelectedIndex="0">
                            <ComboBoxItem
                        Content="0"/>
                            <ComboBoxItem
                        Content="1"/>
                            <ComboBoxItem
                        Content="2"/>
                            <ComboBoxItem
                        Content="3"/>
                            <ComboBoxItem
                        Content="4"/>
                            <ComboBoxItem
                        Content="5"/>
                        </ComboBox>
                        <Label
                    Content="d"
                    VerticalAlignment="Center"/>
                        <TextBox
                    Text="0,00"
                    Width="70"
                    VerticalAlignment="Center"
                    Name="R4TextD"
                    PreviewTextInput = "TextBox_Checker_Text"/>
                        <Label
                    Content="a"
                    VerticalAlignment="Center"/>
                        <TextBox
                    Text="0,00"
                    Width="70"
                    VerticalAlignment="Center"
                    Name="R4TextA"
                    PreviewTextInput = "TextBox_Checker_Text"/>
                    </WrapPanel>
                </GroupBox>
               
            </WrapPanel>
        </RadioButton>

        <RadioButton
            Margin="5"
            Name="Radio5"
            Checked="RadioButton_Checked">
            <WrapPanel Orientation="Vertical" IsEnabled="False" x:Name="PanelP5">
                <Image
                    x:Name="ImageP5"
                    Height="65"/>
                <GroupBox Header="Parametrs"
                          Style="{DynamicResource GroupBoxStyle}">
                    <WrapPanel Orientation="Horizontal">
                        <Label
                            Content="N"
                            VerticalAlignment="Center"/>
                        <TextBox
                            Width="70"
                            VerticalAlignment="Center"
                            Name="R5TextN"
                            PreviewTextInput = "TextBox_Checker_Text_int">
                            <TextBox.Text>
                                <Binding Path="R5TextK">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Label
                            Content="K"
                            VerticalAlignment="Center"/>
                        <TextBox
                            Width="70"
                            VerticalAlignment="Center"
                            Name="R5TextK"
                            PreviewTextInput = "TextBox_Checker_Text_int">
                            <TextBox.Text>
                                <Binding Path="R5TextK">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>

                        </TextBox>
                        <Label
                            Content="x"
                            VerticalAlignment="Center"/>
                        <TextBox
                            Text="0,00"
                            Width="70"
                            VerticalAlignment="Center"
                            Name="R5TextX"
                            PreviewTextInput = "TextBox_Checker_Text"/>
                    </WrapPanel>
                </GroupBox>
                
            </WrapPanel>
        </RadioButton>
        <StackPanel Orientation="Horizontal">
            <Button 
                Content="Считать"
                Width="100"
                Click="Calc_Click"
                Style="{DynamicResource ButtonStyle}"/>
            <Button Content="Сменить тему"
                    Width="100"
                    Click="ChangeTheme_Click"
                    Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
        
        
    </StackPanel>
</Window>
