<Window x:Class="Практическая_работа_1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_работа_1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="200" MinHeight="180" MinWidth="200" MaxHeight="500" MaxWidth="760">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DockPanel 
            Grid.Row="1" 
            Grid.Column="0" 
            LastChildFill="False">
            <WrapPanel 
                DockPanel.Dock="Right" 
                Margin="0 0 10 0">
                <Button Content="A" Background="Yellow" Height="50" Width="50" Margin="5"></Button>
                <Button Content="B" Background="Red" Height="50" Width="50" Margin="5"></Button>
                <Button Content="C" Background="Green" Height="50" Width="50" Margin="5"></Button>
                <Button Content="D" Background="Blue" Height="50" Width="50" Margin="5"></Button>
                <Button Content="E" Background="Gray" Height="50" Width="50" Margin="5"></Button>
                <Button Content="F" Background="Azure" Height="50" Width="50" Margin="5"></Button>
            </WrapPanel>
        </DockPanel>

        <DockPanel 
            Grid.Row="0" 
            Grid.Column="1" 
            Grid.RowSpan="2" 
            LastChildFill="False">
            <WrapPanel 
                DockPanel.Dock="Left" 
                Margin="10 0 0 0">
                <Button Content="A" Background="Yellow" Height="50" Width="50" Margin="5"></Button>
                <Button Content="B" Background="Red" Height="50" Width="50" Margin="5"></Button>
                <Button Content="C" Background="Green" Height="50" Width="50" Margin="5"></Button>
                <Button Content="D" Background="Blue" Height="50" Width="50" Margin="5"></Button>
                <Button Content="E" Background="Gray" Height="50" Width="50" Margin="5"></Button>
                <Button Content="F" Background="Azure" Height="50" Width="50" Margin="5"></Button>
            </WrapPanel>
        </DockPanel>

    </Grid>
</Window>
