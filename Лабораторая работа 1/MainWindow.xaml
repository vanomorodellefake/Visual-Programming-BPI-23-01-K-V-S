<Window x:Class="Лабораторая_работа_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Лабораторая_работа_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800" MaxHeight="150" MaxWidth="800" MinHeight="150" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Button
            Grid.Row="1"
            Content="Вычислить секунды из общего времени"
            Click="ReturnSeconds"
            />
        <Button
            Grid.Row="2"
            Content="Добавить к текущему времени секунды"
            Click="AddSomeSeconds"
            />
        
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            
        </Grid>
              
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button
            Grid.Column="0"
            Grid.RowSpan="2"
            Background="SlateGray"
            Content="Введите данные:"
            />
            <Button
                Background="SlateGray"
                Grid.Column="1"
                Content="Часы"
                />
            <Button
                Background="SlateGray"
                Grid.Column="2"
                Content="Минуты"
                />
            <Button
                Background="SlateGray"
                Grid.Column="3"
                Content="Секунды"
                />
            <TextBox 
                Grid.Column="1"
                Grid.Row="1"
                x:Name="hours"
                PreviewKeyDown="TextBox_Checker"
                />
            <TextBox 
                Grid.Row="1"
                Grid.Column="2"
                x:Name="minutes"
                PreviewKeyDown="TextBox_Checker"
                />
            <TextBox 
                Grid.Row="1"
                Grid.Column="3"
                x:Name="seconds"
                PreviewKeyDown="TextBox_Checker"
                />
            <Button
            Background="SlateGray"
            Grid.Column="4"
            Content="Секунды для добавления"
            />

            <TextBox 
            Grid.Row="1"
                Grid.Column="4"
            x:Name="AmountSecondsToAdd"
            PreviewKeyDown="TextBox_Checker"
            />
        </Grid>
    </Grid>
</Window>
