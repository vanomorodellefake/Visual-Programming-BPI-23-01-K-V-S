<Window x:Class="Лабораторая_работа_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Лабораторая_работа_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800" MaxHeight="150" MaxWidth="800" MinHeight="150" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!---
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button 
                Background="SlateGray"
                Content= "Введите коэффициент:"/>
            <TextBox 
                Grid.Column="1"
                x:Name="Coefficient"
                PreviewKeyDown="TextBox_Checker"/>
        </Grid>
        -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>
            <Button 
                Background="SlateGray"
                Content= "Введите значение X:"/>
            <TextBox
                x:Name="znach_peremen"
                PreviewKeyDown="TextBox_Checker" Grid.ColumnSpan="3" Margin="133,0,0,0">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.49,0.5" EndPoint="0.5,0.5">
                        <GradientStop Color="SlateGray" Offset="0" />
                        <GradientStop Color="White" Offset="1" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
        </Grid>

        <Button 
            Background="SlateGray"
            Grid.Row="1"
            Content="Выберите тип функции:"/>

        <ComboBox 
            Grid.Row="2"
            x:Name="ChooseOfFunction"
            SelectionChanged="SelectionChanged">
            <ComboBox.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="SlateGray" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem>Синус</ComboBoxItem>
            <ComboBoxItem>Косинус</ComboBoxItem>
            <ComboBoxItem>Тангенс</ComboBoxItem>
        </ComboBox>

        <Button 
            Grid.Column="1" 
            Grid.RowSpan="4"
            Content="Вывести значение функции"
            Click="ReturnZnach">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="SlateGray" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button 
            Grid.Column="2" 
            Grid.RowSpan="4" 
            Content="Создать производную экземпляра"
            Click="CreateDerivative"
            x:Name="Derivative">
            <Button.Background>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="SlateGray" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
